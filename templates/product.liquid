{% case product.handle %}

  {% comment %}
  {% when 'rhino-slider-evo' %}
    {% section 'product-evo' %}
  {% endcomment %}

  {% when 'rhino-motion' %}
    {% section 'product-motion' %}

  {% when 'rhino-arc' %}
    {% section 'product-arc' %}

  {% when 'rhino-flywheel' %}
    {% section 'product-flywheel' %}

  {% else %}
    {% section 'product-template' %}
    {% section 'related-products-template' %}
{% endcase %}
