<style type="text/css">
  .rhino-block-{{ block.id }} {
    height: {{ block.settings.size }};
    {% if block.settings.contain_width %}
      max-width: 1600px;
      margin: 0 auto;
    {% endif %}
  }

  .rhino-block-{{ block.id }} .header-block-content {
    justify-content: {{ block.settings.flex_horizontal_position }};
    align-items: {{ block.settings.flex_vertical_position }};
    text-align: {{ block.settings.align }};
  }

  .rhino-block-{{ block.id }} .hb-container {
    max-width: {{ block.settings.container_max_width }}px;
  }

  .rhino-block-{{ block.id }} .tagline {
    padding-top: {{ block.settings.tagline-padding }}px;
  }

  .rhino-block-{{ block.id }} .product-price {
    padding-top: {{ block.settings.price-padding }}px;
  }

  .rhino-block-{{ block.id }} .button {
    padding-top: {{ block.settings.button-padding }}px;
  }

</style>
