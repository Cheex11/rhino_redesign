<style type="text/css">
  .rhino-block-{{ block.id }} {
    color: {{ block.settings.color }};
    height: {{ block.settings.size }};

    {% if block.settings.contain_width %}
      max-width: 1600px;
      margin: 0 auto;
    {% endif %}

    {% if block.settings.flip_background %}
      -moz-transform: scaleX(-1);
      -o-transform: scaleX(-1);
      -webkit-transform: scaleX(-1);
      transform: scaleX(-1);
      filter: FlipH;
      -ms-filter: "FlipH";
    {% endif %}
  }

  .rhino-block-{{ block.id }} .rhino-block-content {
    color: {{ block.settings.color }};
    justify-content: {{ block.settings.flex_horizontal_position }};
    align-items: {{ block.settings.flex_vertical_position }};
  }

  {% if block.settings.mobile_swap %}
    @media (max-width: 950px) {
      .rhino-block-{{ block.id }} .rhino-block-content {
        flex-direction: column;
        justify-content: space-around;
      }
    }
  {% endif %}

  .rhino-block-{{ block.id }} .rbi-1-container {
    text-align: {{ block.settings.rbi_1_align }};
    padding: {{ block.settings.rbi_1_margin_top }} {{ block.settings.rbi_1_margin_right }} {{ block.settings.rbi_1_margin_bottom }} {{ block.settings.rbi_1_margin_left }};

    {% if block.settings.flip_background %}
      -moz-transform: scaleX(-1);
      -o-transform: scaleX(-1);
      -webkit-transform: scaleX(-1);
      transform: scaleX(-1);
      filter: FlipH;
      -ms-filter: "FlipH";
    {% endif %}


    {% if block.settings.rb_video != blank %}
      width: 50%;
    {% endif %}
    {% if block.settings.enable_set_widths %}
      width: {{ block.settings.midpoint }}%;
    {% endif %}
  }

  .rhino-block-{{ block.id }} .rbi-2-container {
    text-align: {{ block.settings.rbi_2_align }};
    {% if block.settings.rbi_2_video != blank %}
    text-align: center;
    {% endif %}
    padding: {{ block.settings.rbi_2_margin_top }} {{ block.settings.rbi_2_margin_right }} {{ block.settings.rbi_2_margin_bottom }} {{ block.settings.rbi_2_margin_left }};

    {% if block.settings.flip_background %}
      -moz-transform: scaleX(-1);
      -o-transform: scaleX(-1);
      -webkit-transform: scaleX(-1);
      transform: scaleX(-1);
      filter: FlipH;
      -ms-filter: "FlipH";
    {% endif %}

    {% if block.settings.rbi_1_title == blank and block.settings.rbi_1_text == blank and block.settings.rb_video == blank and block.settings.rbi_1_image == blank %}
      max-width: 80%;
    {% endif %}

    {% if block.settings.enable_set_widths %}
      width: {{ 100 | minus: block.settings.midpoint }}%;
      margin: 0 auto;
    {% endif %}
  }

  {% if block.settings.rbi_2_video != blank %}
    @media (max-width: 950px) {
      .rhino-block-{{ block.id }} .rbi-2-container {
        display: none;
      }
    }
  {% endif %}

  .rhino-block-{{ block.id }} .rbi-1-text {
    margin: 0 auto;
    text-align: {{ block.settings.rbi_1_align }};
    margin-top: {{ block.settings.rbi_1_title_text_padding }}px;
    max-width: {{ block.settings.rbi_1_text_max_width }}px;
    {% if block.settings.rbi_1_align contains 'center' %}
    {% else %}
    float: {{ block.settings.rbi_1_align }};
    {% endif %}
  }

  .rhino-block-{{ block.id }} .rbi-2-text {
    margin: 0 auto;
    text-align: {{ block.settings.rbi_2_align }};
    margin-top: {{ block.settings.rbi_2_title_text_padding }}px;
    max-width: {{ block.settings.rbi_2_text_max_width }}px;
    {% if block.settings.rbi_2_align contains 'center' %}
    {% else %}
      float: {{ block.settings.rbi_2_align }};
    {% endif %}
  }


  .rhino-block-{{ block.id }} .rbi-1-link {
    padding-top: {{ block.settings.rbi_1_link_padding }}px;
  }

  .rhino-block-{{ block.id }} .rbi-2-link {
    padding-top: {{ block.settings.rbi_2_link_padding }}px;
  }

  .rhino-block-{{ block.id }} .rbi-1-image {
    padding-top: {{ block.settings.rbi_1_image_padding }}px;
  }
  .rhino-block-{{ block.id }} .rbi-2-image {
    padding-top: {{ block.settings.rbi_2_image_padding }}px;
  }

  .rhino-block-{{ block.id }} .rbi-1-text-container .rbi-1-text .rbi-1-link {
    color: {{ block.settings.rbi_1_link_text_color }} !important;
  }
  .rhino-block-{{ block.id }} .rbi-2-text-container .rbi-2-text .rbi-2-link {
    color: {{ block.settings.rbi_2_link_text_color }} !important;
  }

  {% if block.settings.rb_video != blank %}
    @media (max-width: 950px) {
      .rhino-block-{{ block.id }} .rbi-1-container {
        display: none !important;
      }
    }
  {% endif %}

</style>

<script>
  var flexes = document.getElementsByClassName("ph-flex")

  var div = document.createElement('div');
  div.innerHTML = "{{ block.settings.header_text }}";
  div.setAttribute('class', 'ph-menu-item');

  for(var i = 0; i < flexes.length; i++) {
     flexes[i].appendChild(div)
  }
</script>
