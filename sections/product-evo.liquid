{% assign current_variant = product.selected_or_first_available_variant %}

<div class="rhino-block-container" data-section-id="{{ section.id }}" data-section-type="rhino-block">
  {% for block in section.blocks %}
    {% if block.type == "rhino-block" %}
      {% include 'rhino-block' %}
    {% elsif block.type == "header-block" %}
      {% include 'header-block' %}
    {% endif %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "ARC Product Page",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "header-block",
      "name": "Header Block",
      "settings": [
        {
          "type": "header",
          "content": "General Layout"
        },
        {
          "type": "radio",
          "id": "size",
          "label": "Length",
          "options": [
            { "value": "400px", "label": "Small (400px)" },
            { "value": "600px", "label": "Medium (600px)" },
            { "value": "750px", "label": "Large (750px)" },
            { "value": "900px", "label": "XLarge (900px)"}
          ],
          "default": "600px"
        },
        {
          "type": "checkbox",
          "id": "contain_width",
          "label": "Contain width to 1600px",
          "default": false
        },
        {
          "type": "radio",
          "id": "flex_horizontal_position",
          "label": "Horizontal Position",
          "options": [
            { "value": "flex-start", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "flex-end", "label": "Right" }
          ],
          "default": "center"
        },
        {
          "type": "radio",
          "id": "flex_vertical_position",
          "label": "Vertical Position",
          "options": [
            { "value": "flex-start", "label": "Top" },
            { "value": "center", "label": "Center" },
            { "value": "flex-end", "label": "Bottom" }
          ],
          "default": "center"
        },
        {
          "type": "header",
          "content": "Text Content"
        },
        {
          "type": "text",
          "id": "top_title",
          "label": "Title",
          "default": "Product Name"
        },
        {
          "type": "text",
          "id": "tagline",
          "label": "Tag Line",
          "default": "Add a Tag Line"
        },
        {
          "type": "number",
          "id": "container_max_width",
          "label": "Max-width for text",
          "default": 400,
          "info": "Enter Number of Pixels"
        },
        {
          "type": "number",
          "id": "tagline-padding",
          "label": "Space Under Title",
          "default": 0,
          "info": "Enter Number of Pixels"
        },
        {
          "type": "radio",
          "id": "align",
          "label": "Text Alignment",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "right", "label": "Right" }
          ],
          "default": "left"
        },
        {
          "type": "checkbox",
          "id": "show_price",
          "label": "Show Product Price",
          "default": true
        },
        {
          "type": "number",
          "id": "price-padding",
          "label": "Price Top-Padding",
          "default": 30,
          "info": "Enter Number of Pixels"
        },
        {
          "type": "checkbox",
          "id": "show_buy_button",
          "label": "Show Button",
          "default": true
        },
        {
          "type": "number",
          "id": "button-padding",
          "label": "Button Top-Padding",
          "default": 20,
          "info": "Enter Number of Pixels"
        },
        {
          "type": "header",
          "content": "Background Image"
        },
        {
          "type": "image_picker",
          "id": "background",
          "label": "Background Image"
        },
        {
          "type": "checkbox",
          "id": "background_shadow",
          "label": "Darken Background",
          "default": false
        }
      ]
    },
    {
      "type": "rhino-block",
      "name": "Rhino Flex Block",
      "settings": [
        {
          "type": "header",
